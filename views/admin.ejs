<!DOCTYPE html>
<html lang="en">

    <head>
        <%-include('./inc/head')%>
    </head>

    <body>
        <%-include('./inc/nav')%>

        <section>
            <a href="/admin/add">Add an Article</a>
            <h1>Articles</h1>
            <ul>
                <% blogs.forEach(blog=> { %>
                <li>
                    <p><%=blog.title%></p>
                    <a class="del" data-doc="<%=blog._id%>">Delete</a>
                </li>
                <% })%>
            </ul>

        </section>

        <script>
            const del = document.querySelectorAll('a.del')

            const delLinks = [].slice.call(del)
            console.log(delLinks)

            delLinks.forEach((item, i) => {
                item.addEventListener('click', (e) => {
                    const endpoint = `/admin/delete/${item.dataset.doc}`

                    fetch(endpoint, {
                        method: 'DELETE'
                    })
                        .then((response) => response.json())
                        .then((data) => window.location.href = data.link)
                        .catch((err) => {
                            console.log(err)
                        })
                })
            });



        </script>





    </body>

</html>
